<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2CD5E"
    android:orientation="vertical"
    android:weightSum="1" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_weight="0.9"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal" >

        <ToggleButton
            android:id="@+id/place_display_toggleButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/toggle_button_selector"
            android:textOff=""
            android:textOn=""
            android:textSize="22sp" />

        <Button
            android:id="@+id/begin_journey_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_action_journey_on"
            android:textSize="22sp" />

        <Button
            android:id="@+id/end_journey_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_action_journey_off"
            android:textSize="22sp" />

        <Button
            android:id="@+id/add_place_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_action_add_place"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>